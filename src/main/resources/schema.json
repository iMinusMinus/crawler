{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "title": "crawler task definition",
  "description": "crawler task setting and task steps",
  "type": "object",
  "required": ["id", "url", "settings", "steps"],
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "url": {
      "type": "string",
      "hint": "if set cookie, please specify url(domain) first"
    },
    "version": {
      "type": "string"
    },
    "settings": {
      "type": "object",
      "required": ["browserName", "arguments"],
      "properties": {
        "debug": {
          "type": "boolean",
          "hint": "if set true, program exit without quit webdriver"
        },
        "browserName": {
          "type": "string",
          "enum": ["chrome", "msedge", "firefox", "opera", "safari", "internet explorer"]
        },
        "arguments": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^--[a-zA-Z0-9]+=?[a-zA-Z0-9]+$"
          },
          "examples": ["--headless=new", "--no-sandbox", "--remote-allow-origins=*"]
        },
        "experimentalOptions": {
          "type": "object",
          "properties": {
            "excludeSwitches": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "capabilities": {
          "type": "object",
          "properties": {
            "browserVersion": {
              "type": "string"
            },
            "platformName": {
              "type": "string"
            },
            "goog:chromeOptions": {
              "type": "object"
            }
          }
        }
      }
    },
    "steps": {
      "type": "array",
      "minitems": 1,
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["box", "locator", "action", "finder"]
          },
          "target": {
            "type": "string"
          },
          "noPushToContext": {
            "type": "boolean",
            "hint": "when loop elements whether push current item to context or not"
          },
          "hook": {
            "type": "object",
            "properties": {
              "doBefore": {
                "type": "string",
                "hint": "janino script"
              },
              "doAfter": {
                "type": "string",
                "hint": "janino script"
              },
              "doThrowing": {
                "type": "string",
                "hint": "janino script"
              }
            }
          },
          "wrap": {
            "type": "boolean",
            "hint": "wrap item with map if set true"
          },
          "steps": {
            "type": "array"
          },
          "required": {
            "type": "string",
            "hint": "要获取的字段是否必须"
          },
          "xpath": {
            "type": "string",
            "hint": "循环内注意选择器的使用，不要误选择了所有"
          },
          "selector": {
            "type": "string",
            "hint": "循环内注意选择器的使用，不要误选择了所有"
          },
          "multi": {
            "type": "boolean"
          },
          "valueGetter": {
            "type": "string",
            "enum": ["text", "attribute"]
          },
          "attributeKey": {
            "type": "string"
          },
          "outputPropertyName": {
            "type": "string",
            "pattern": "^[a-zA-Z\\$][0-9a-zA-Z_\\$]+",
            "hint": "'$' stands for root object of result, null stands collection elements"
          },
          "outputValueType": {
            "type": "string",
            "hint": "property type"
          },
          "valueConverter": {
            "type": "janino expression"
          },
          "actionName": {
            "type": "string",
            "enum": ["+cookies", "-cookie", "-cookies","switch", "input", "click", "scroll", "close", "wait", "screenshot"]
          },
          "cookies": {
            "type": "string"
          },
          "cookieNames": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "inputValue": {
            "type": "string"
          },
          "deltaX": {
            "type": "number"
          },
          "deltaY": {
            "type": "number"
          },
          "scrollTo": {
            "type": "string"
          },
          "minWaitTime": {
            "type": "number"
          },
          "maxWaitTime": {
            "type": "number"
          },
          "expectedCondition": {
            "type": "string"
          },
          "testValue": {
            "type": "string"
          },
          "ignoreNotApply": {
            "type": "boolean",
            "hint": "waiting element might not exist, ignore or throw Timeout exception"
          }
        }
      }
    }
  }
}